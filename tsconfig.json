{
	"compilerOptions": {
		"target": "es2015",
		"module": "commonjs",
		"rootDir": "./src",
		"moduleResolution": "node",
		"outDir": "./lib",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationDir": "./lib/@types"
	},
	"include": ["./src"],
	"exclude": ["node_modules"]
}
